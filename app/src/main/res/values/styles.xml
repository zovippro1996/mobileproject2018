<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom theme for buttons in IntroActivity. -->
    <style name="IntroActivityButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPinkButton</item>
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <!-- Custom theme for title(s). -->
    <style name="AppTitleTheme" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom theme for input-prompt (TextView) -->
    <style name="AppInputPromptTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPinkInputPrompt</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!-- Custom rating bar -->
    <style name="AppCustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

</resources>
