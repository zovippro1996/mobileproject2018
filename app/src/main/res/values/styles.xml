<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimary">@color/colorCustomPrimary</item>
        <item name="colorPrimaryDark">@color/colorCustomPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom theme for buttons in IntroActivity. -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPinkButton</item>
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom theme for title(s). -->
    <style name="AppTheme.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom theme for input-prompt (TextView) -->
    <style name="AppTheme.InputPrompt" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPinkInputPrompt</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!-- Custom rating bar -->
    <style name="AppTheme.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme_Animation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_Animation.Transparent" parent="AppTheme_Animation">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>


</resources>
