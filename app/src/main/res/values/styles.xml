<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="android:colorPrimary">@color/colorCustomPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorCustomPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom theme for buttons in IntroActivity. -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPinkButton</item>
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom theme for input-prompt (TextView) -->
    <style name="AppTheme.InputPrompt" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPinkInputPrompt</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!-- Custom rating bar -->
    <style name="AppTheme.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
